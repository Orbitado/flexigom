{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Customer orders and payment information"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "external_reference": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "payment_id": {
      "type": "string"
    },
    "payment_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "approved",
        "rejected",
        "refunded",
        "cancelled",
        "in_process",
        "in_mediation",
        "charged_back"
      ],
      "default": "pending",
      "required": true
    },
    "payment_method": {
      "type": "string"
    },
    "payment_type": {
      "type": "string"
    },
    "transaction_amount": {
      "type": "decimal"
    },
    "customer_email": {
      "type": "email"
    },
    "customer_name": {
      "type": "string"
    },
    "customer_phone": {
      "type": "string"
    },
    "customer_dni": {
      "type": "string"
    },
    "customer_document_type": {
      "type": "enumeration",
      "enum": ["DNI", "CUIT"],
      "default": "DNI",
      "required": true
    },
    "customer_fiscal_category": {
      "type": "enumeration",
      "enum": [
        "CONSUMIDOR_FINAL",
        "RESPONSABLE_INSCRIPTO",
        "EXENTO",
        "MONOTRIBUTISTA"
      ],
      "default": "CONSUMIDOR_FINAL",
      "required": true
    },
    "customer_address": {
      "type": "text"
    },
    "items": {
      "type": "json",
      "required": true
    },
    "metadata": {
      "type": "json"
    },
    "webhook_notifications": {
      "type": "json"
    },
    "mercadopago_data": {
      "type": "json"
    },
    "dux_invoice_id": {
      "type": "string"
    },
    "dux_invoice_number": {
      "type": "string"
    },
    "dux_invoice_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "created",
        "failed",
        "retrying"
      ],
      "default": "pending"
    },
    "dux_invoice_data": {
      "type": "json"
    },
    "dux_invoice_error": {
      "type": "text"
    },
    "dux_invoice_created_at": {
      "type": "datetime"
    },
    "dux_invoice_attempts": {
      "type": "integer",
      "default": 0
    }
  }
}
