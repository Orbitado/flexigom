{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Customer orders and payment information"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "external_reference": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "payment_id": {
      "type": "string"
    },
    "payment_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "approved",
        "rejected",
        "refunded",
        "cancelled",
        "in_process",
        "in_mediation",
        "charged_back"
      ],
      "default": "pending",
      "required": true
    },
    "payment_method": {
      "type": "string"
    },
    "payment_type": {
      "type": "string"
    },
    "transaction_amount": {
      "type": "decimal"
    },
    "customer_email": {
      "type": "email"
    },
    "customer_name": {
      "type": "string"
    },
    "customer_phone": {
      "type": "string"
    },
    "items": {
      "type": "json",
      "required": true
    },
    "metadata": {
      "type": "json"
    },
    "webhook_notifications": {
      "type": "json"
    },
    "mercadopago_data": {
      "type": "json"
    }
  }
}
